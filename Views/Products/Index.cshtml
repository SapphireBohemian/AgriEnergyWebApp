@model IEnumerable<AgriEnergyWebApp.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1 class="mt-5 mb-4">Products</h1>

    <div class="row mb-3">
        <div class="col-md-6">
            <a asp-action="New" asp-controller="Home" class="btn btn-primary">Main Menu</a>
        </div>
        <div class="col-md-6">
            <a asp-action="Create" class="btn btn-success float-md-right">Add New Product</a>
        </div>
    </div>

    <form asp-controller="Products" asp-action="Index" method="get" class="mb-4">
        <div class="row">
            <div class="col-md-3 mb-2">
                <input type="text" name="SearchString" class="form-control" placeholder="Product Type">
            </div>
            <div class="col-md-3 mb-2">
                <input type="date" name="fromDate" class="form-control" placeholder="From Date">
            </div>
            <div class="col-md-3 mb-2">
                <input type="date" name="toDate" class="form-control" placeholder="To Date">
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary btn-block">Filter</button>
            </div>
        </div>
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Product Price</th>
                <th>Product Quantity</th>
                <th>Product Type</th>
                <th>Date</th>
                <th>Farmer ID</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                    <td>R @Html.DisplayFor(modelItem => item.ProductPrice).00</td>
                    <td>@Html.DisplayFor(modelItem => item.ProductQuantity)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProductType)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProductDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Farmer.FarmerId)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-info">Update</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
